{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./src/**/*",
    "./typings"
  ],
  "exclude": [
    "node_modules",
  ]
}
